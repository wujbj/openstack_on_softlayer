#
# Install Python and useful libraries we may use to configure the node
#

if [ -e /etc/debian_version ]; then
  # not all these libraries may exist, don't worry about that for now
  apt-get install pyXML python-ipaddr python-netaddr python-pycurl
fi
if [ -e /etc/redhat-release ]; then
  yum -y install python PyXML python-ipaddr python-netaddr python-pycurl
fi
