<clusters>
<cluster name="cluster_name">
    <environment path="/root/openstackchef/openstack-installation" 
        env_name="grizzly" username="root" ssh_key="/root/.ssh/id_rsa">
        <dbtype>mysql</dbtype>
        <mqtype>qpid</mqtype>
        <enable_iptables>true</enable_iptables>
        <networktype>quantum</networktype>
        <quantum>
            <tenant_network_type>vlan</tenant_network_type>
            <network_vlan_range>520:550</network_vlan_range>
            <bridge_mapping_nic>eth1</bridge_mapping_nic>
            <floating_if>eth5</floating_if>
            <enable_tunneling>true</enable_tunneling>
            <tunnel_id_range>1:1000</tunnel_id_range>
        </quantum>
 	    <networks>
             <pubnet>172.16.0.0/16</pubnet>
             <novanet>172.16.0.0/16</novanet>
             <mgmtnet>172.16.0.0/16</mgmtnet>

             <dns1>172.16.0.1</dns1>
             <bridge>br-vmnet</bridge>
             <bridgedev>eth1</bridgedev>
             <vmnet>192.168.1.0/24</vmnet>
             <vmnetnum>1</vmnetnum>
             <vmnetsize>256</vmnetsize>

             <firewall_driver>nova.virt.firewall.NoopFirewallDriver</firewall_driver>
             <network_manager>nova.network.manager.FlatDHCPManager</network_manager>
             <vlan vlan_end="550" vlan_start="520" vlan_interface="vlan1" />
        </networks>
        <glance>
             <image_upload>true</image_upload>
        </glance>
        <gpfs>
            <gpfs_cluster_name>gpfs_01</gpfs_cluster_name>
        </gpfs>
        <sce_repo>http://172.16.0.3:8080/sce/$releasever/$basearch</sce_repo>
        <rhel_repo>http://172.16.0.3:8080/redhat/rhel/$releasever/$basearch</rhel_repo>
        <epel_repo>http://172.16.0.3:8080/redhat/epel/$releasever/$basearch</epel_repo>
        <openstack_repo>http://172.16.0.3:8080/openstack/$releasever</openstack_repo>
        <middleware_repo>http://172.16.0.3:8080/db2/$releasever</middleware_repo>
        <packageserver>172.16.1.200</packageserver>
        <imageserver>172.16.0.4</imageserver>
    </environment>
    <nodes>
        <node>
            <hostname>controller-with-quantum</hostname>
            <role>yum,base,init-db,keystone,init-mq,glance,cinder-api,cinder-scheduler,nova-api,ec2-api,nova-scheduler,nova-conductor,quantum-server,quantum-dhcp-agent,quantum-ovs-agent,nova-compute</role>
        </node>
    </nodes>
</cluster>
</clusters>
